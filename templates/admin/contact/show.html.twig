{# templates/admin/contact.show.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Rendez-vous{% endblock %}

{% block body %}
<div class="container">
    <h3 class="pt-3 h3-admin"><img src="{{ asset('images/calendar.svg') }}" width="26" alt="Rendez-vous"> Rendez-vous - N°: {{ appointment.id }}
        {# <span class="badge badge-success ml-3">Nouveau</span> #}
    </h3>
    <div class="row mt-3">
        <div class="col-lg-5 my-3">
            <ul class="list-group">
                <li class="list-group-item">Nom : <span class="font-weight-bold ml-2">{{ appointment.name }}</span></li>
                <li class="list-group-item">Entreprise : 	<span class="font-weight-bold ml-2">{{ appointment.company }}</span></li>
                <li class="list-group-item">Email : <span class="font-weight-bold ml-2">{{ appointment.mail }}</span></li>
                <li class="list-group-item">Téléphone : <span class="font-weight-bold ml-2">{{ appointment.phone }}</span></li>    
                <li class="list-group-item active">Rendez-vous le : <span class="font-weight-bold ml-2">{{ appointment.appDate }}</span></li>   
            </ul>
        </div>
        <div class="col-lg-7 my-3">
            <div class="message-client">
                <div class="container">
                    Demande reçu le : <span class="badge badge-primary mb-4">{{ appointment.createdAt | date("d/m/Y") }}</span>
                    <h3 class="pb-3">Message du client : </h3>
                    <p>{{ appointment.appMessage | nl2br }}</p>
                </div>
            </div>
            {# <div class="float-right mb-5">
                <div class="d-flex mt-3">
                    <div class="p-2">
                        Statut :
                    </div>
                    <form class="">
                        <div class="form-group">
                            <select class="custom-select">
                                <option selected></option>
                                <option value="0">Nouveau</option>
                                <option value="1">En cours</option>
                                <option value="2">Terminié</option>
                                <option value="3">Annulé</option>
                            </select>   
                        </div>
                    </form>
                </div>
            </div> #}
        </div>    
    </div>
</div>
{% endblock %}