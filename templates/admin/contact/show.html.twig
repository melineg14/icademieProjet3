{# templates/admin/contact.show.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Rendez-vous{% endblock %}

{% block body %}
<div class="container">
    <h3 class="pt-3 h3-admin"><img src="{{ asset('images/calendar.svg') }}" width="26" alt="Rendez-vous"> Rendez-vous - N°: {{ appointment.id }}</h3>
    <div class="row mt-3">
        <div class="col-lg-5 my-3">
            <ul class="list-group">
                <li class="list-group-item">Nom : <span class="font-weight-bold ml-2">{{ appointment.name|escape }}</span></li>
                <li class="list-group-item">Entreprise : 	<span class="font-weight-bold ml-2">{{ appointment.company|escape }}</span></li>
                <li class="list-group-item">Email : <span class="font-weight-bold ml-2">{{ appointment.mail|escape }}</span></li>
                <li class="list-group-item">Téléphone : <span class="font-weight-bold ml-2">{{ appointment.phone|escape }}</span></li>    
                <li class="list-group-item active">Rendez-vous le : <span class="font-weight-bold ml-2">{{ appointment.appDate|escape }}</span></li>   
            </ul>
        </div>
        <div class="col-lg-7 my-3">
            <div class="message-client">
                <div class="container">
                    Demande reçu le : <span class="badge badge-primary mb-4">{{ appointment.createdAt | date("d/m/Y") }}</span>
                    <h3 class="pb-3">Message du client : </h3>
                    <p>{{ appointment.appMessage |nl2br |escape }}</p>
                </div>
            </div>
        </div>    
    </div>
</div>
{% endblock %}