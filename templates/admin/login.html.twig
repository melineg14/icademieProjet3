{# templates/admin/login.html.twig #}
<!doctype html>
<html lang="fr">

	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="robots" content="noindex, nofollow">
		<title>Connexion</title>

		<link rel="icon" href="{{ asset('favicons/favicon.ico') }}">

		{% block stylesheets %}
			<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
		{% endblock %}
	</head>

	<body class="login">

		<main class="container h-100">
			<div class="row h-100 justify-content-center align-items-center mt-5">
				<div class="col-10 col-md-8 col-lg-5">
					<form action="{{ path('security.login') }}" method="post">
						<img src="{{ asset('images/logo_black.svg') }}" width="180" alt="RCP Electronic" class="mx-auto d-block mb-3" loading="lazy">
						{% if error %}
							<div class="alert alert-danger">
								{{ error.messageKey | trans(error.messagedata, 'security') }}
							</div>
						{% endif %}
						<div class="form-group">
							<label for="identifiant">Identifiant</label>
							<input type="text" class="form-control" id="identifiant" name="_username">
						</div>
						<div class="form-group">
							<label for="password">Mot de passe</label>
							<input type="password" class="form-control" id="password" name="_password">
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="text-right">
							<button type="submit" class="btn btn-sm btn-primary my-3 text-center">SE CONNECTER</button>
						</div>
						<p class="text-center">
							<small>&copy; RCP Electronic 2020</small>
						</p>
					</form>
				</div>
			</div>
		</main>

		{% block javascripts %}{% endblock %}
	</body>
</html>
